{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build folder",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "mkdir",
            "args": [
                "-p",
                "build"
            ]
        },
        {
            "label": "Editor Configure",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                "${workspaceRoot}"
            ],
            "dependsOn": [
                "Build folder"
            ]
        },
        {
            "label": "Build Editor",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build/components/Editor"
            },
            "dependsOn": [
                "Editor Configure"
            ]
        },
    ]
}